<div class="row">
    <div class="col activity-header">
        <p class="pt-3">
            <a href="{{backurl}}" class="btn btn-primary mr-5" title="{{backurlstring}}">{{#pix}} i/return {{/pix}} {{backurlstring}}</a>
            <b>{{#str}}view:eportfolio:sharedby, local_eportfolio{{/str}}:</b> {{userfullname}} |
            <b>{{#str}}view:eportfolio:timecreated, local_eportfolio{{/str}}:</b> {{timecreated}}
        </p>
    </div>
</div>

<div class="row">
    <div class="col-8 ml-2">
        <h3>{{title}}</h3>
        <hr>
    </div>
</div>
<div class="row pt-3">
    <div class="col-8">

        {{{h5pplayer}}}

    </div>
    <div class="col-4">

        <div class="card">
            <div class="card-body">
                <h4 class="card-title">{{#str}}gradeform:header, mod_eportfolio{{/str}}</h4>
                <hr>
                <p class="card-text">
                    <b>{{#str}}gradeform:grader, mod_eportfolio{{/str}}:</b> {{{grader}}}
                <hr>
                <b>{{#str}}gradeform:gradeview, mod_eportfolio{{/str}}:</b> {{{grade}}}<br>
                <b>{{#str}}gradeform:feedbacktext, mod_eportfolio{{/str}}:</b><br>{{{gradetext}}}
                </p>
            </div>
        </div>
    </div>
</div>